//JavaScript program to get the current date.
function currentTime(){
  var t = new Date();
  document.write(t);
}
currentTime();

//JavaScript program to get the current time.
funnction getTime(){
  var time = new Date();
  var get = time.getTime();
  document.write(time);
}
getTime();

// get date and time in (dd-mm-yy h:m:ss)// syntax => Date().toLocaleString("em-GB");
function getTime(){
  var date = new Date().toLocaleString("em-GB");
  console.log(date);
}
getTime();

