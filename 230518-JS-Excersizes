//example for string method .lastIndexOf();
 function findLast(){
   var str = "Find out the last word!";
   var last = str.lastIndexOf();
 }

 // indexOf and lastIndexOf are showing the same index value of the string , so what is the use of IndexOf();
 function findLast(){
   var str = "Find out the 'last' word!";
   var last = str.indexOf('last');
   document.getElementById('container').innerHTML = last ;
 }
 findLast()

// example for string method slice();
function textLength(){
  var str = "apple, orange, mango";
  var get = str.slice(7,13);
  document.getElementById('container').innerHTML = get;
  alert(get);
}
textLength();

// example for a string method to replace the string using .replace()
function textLength(){
  var str = "where are we going ?";
  var get = str.replace("we","you");
  document.getElementById('container').innerHTML = get;
  alert(get);
}
textLength();

// string method to change string upper case and lowe case
function textLength(){
  var str = "where are we going ?";
  var get = str.toUpperCase();
  document.getElementById('container').innerHTML = get;
  alert(get);
}
textLength();

//  to reverse string
function string(str){
    return str.split("").reverse().join("");
}

